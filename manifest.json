{
  "name": "Pikachu Everywhere",
  "description": "Replace every image with Pikachu images",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts":[
    {
        "js": ["content.js"],
        "matches":[
            "<all_urls>"
            ]
    }
  ],


  "action":{
    "default_icon": "img/Clock-32.png",
    "default_popup": "popup.html"
  },

  "icons": {

    "16": "img/Clock-16.png",
    "32": "img/Clock-32.png",
    "96": "img/Clock-96.png"

  },
  
  "permissions": [

    "nativeMessaging",
    "activeTab",
    "tabs",
    "notifications",
    "storage",
    "scripting",
    "declarativeContent",
    "alarms"
  ],
  "background": {
      "service_worker": "background.js"
    }
}
